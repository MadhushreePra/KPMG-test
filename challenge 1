provider "aws" {
  region = "us-east-2"
}

# Variables
variable "instance_type" {
  default = "t2.micro"
}

variable "ami_id" {
  default = "ami-0f5daaa3a7fb3378b" # Example AMI ID, replace with your desired AMI
}

# Presentation Tier - Web Servers
resource "aws_instance" "web_servers" {
  count         = 2
  ami           = var.ami_id
  instance_type = var.instance_type
  tags = {
    Name = "web-server-${count.index + 1}"
  }
  # Additional configuration for web servers (e.g., security groups, user data, etc.) can be added here
}

# Application Tier - Application Servers
resource "aws_instance" "app_servers" {
  count         = 2
  ami           = var.ami_id
  instance_type = var.instance_type
  tags = {
    Name = "app-server-${count.index + 1}"
  }
  # Additional configuration for application servers can be added here
}

# Data Tier - Database Server (RDS)
resource "aws_db_instance" "database_server" {
  allocated_storage    = 20
  storage_type         = "gp2"
  engine               = "mysql"
  engine_version       = "5.7"
  instance_class       = "db.t2.micro"
  name                 = "mydatabase"
  username             = "admin"
  password             = "password"
  parameter_group_name = "default.mysql5.7"
  publicly_accessible  = false
  tags = {
    Name = "database-server"
  }
}
